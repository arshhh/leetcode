public class Solution {
    int getDigits(int x){
		int digits = 0;
		while(x>0){
			x /= 10;
			digits++;
		}
		return digits;
	}
	int getMin(int n){
		int min=1;
		while(n>1){
			min *= 10;
			n--;
		}
		return min;
	}
    public boolean isPalindrome(int x) {
        // Start typing your Java solution below
        // DO NOT write main() function
    if(x<0)
		return false;
	if(x<9)
		return true;
	int digits = getDigits(x);
	while(digits>1){
		int high = x/getMin(digits);
		int low  = x%10;
		if(high!=low)
			return false;
		x -= (high*getMin(digits));
		x /= 10;
		digits -=2;
	}
	return true;
    }
}

