class Solution {
public:

    bool isMatch(const char *s, const char *p) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function    
        if(s==NULL or p == NULL)
            return false;   
        //end
        if( *s == '\0' && *p=='\0' )
             return true;
        if(strlen(p)>1 && p[1] == '*'){
	    	//doesnâ€™t consider the *
		    if(isMatch(s,&p[2]))
			    return true;
	    	if( *s &&  (s[0] == p[0] || p[0] == '.' ) ) //match one character in s
		    	return isMatch(&s[1],p);
		    else
			    return false;
        	}
    	else{
		    if(*s && *p && (s[0] == p[0] || p[0] == '.' ) )
		    	return isMatch(&s[1],&p[1]);
	    	return false;
    	}
    }
};
