/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *deleteDuplicates(ListNode *head) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function
        ListNode* cur=head;
        ListNode* pre=NULL;
        bool delCur=false;
        
         while(cur!=NULL && cur->next!=NULL){
    		if(cur->val == cur->next->val){
				delCur=true;
				cur->next = cur->next->next;			    
			}else{
                if(delCur){
                    if(pre!=NULL){
                        pre->next=cur->next;
                        cur=cur->next;
                    }else{
                        head = cur->next;
                        cur = head;
                    }
                    delCur=false;
                }else{
                    pre=cur;
		            cur=cur->next;
                  
                }
			}    
		}
      
        if(delCur){   
            if(pre!=NULL){
                pre->next=cur->next;
            }else{
                head = cur->next;
            }
        }
        
        return head;
    }
};
